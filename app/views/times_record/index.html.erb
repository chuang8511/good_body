<h1>Times Fitness Records</h1>

<table>
  <thead>
    <tr>
      <th>Contents</th>
      <th>Duration (min)</th>
      <th>Distance (m)</th>
      <th>Time</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @times_records.each do |record| %>
      <tr>
        <td align="center"><%= record.contents %></td>
        <td align="center"><%= record.duration %></td>
        <td align="center"><%= record.distance %></td>
        <td align="center"><%= record.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= button_to 'Update', edit_times_record_path(id: record.id), method: :get %>
        </td>
        <td>
          <%= button_to 'Delete', delete_times_record_path(record.id), method: :delete, onclick: "return confirmAction('Are you sure you want to delete this record?')" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
  <% end %>

  <script>
function confirmAction(message) {
  var result = confirm(message);
  if (result) {
    // 如果使用者選擇確定，執行刪除操作
    return true;
  } else {
    // 如果使用者選擇取消，停止刪除操作
    return false;
  }
}
</script>


